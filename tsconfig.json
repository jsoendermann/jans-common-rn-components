{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "sourceMap": false,
        "jsx": "react-native",
        "outDir": "dist",
        "experimentalDecorators": true,
        "declaration": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ]
}